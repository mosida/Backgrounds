<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
android:layout_width="fill_parent" android:layout_height="wrap_content"
  >
  <RelativeLayout 
		android:layout_width="wrap_content" 
		android:layout_height="203.32999dip"
      >
        <ImageView android:id="@+id/image" 
            android:layout_width="200.0dip" 
            android:layout_height="203.329990dip"
            />
        <ImageView android:id="@+id/star"
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_margin="5dip" 
            android:src="@drawable/star" 
            android:layout_alignRight="@+id/image"
            android:visibility="invisible" 
            />
        <TextView android:textSize="10.0sp" 
            android:textColor="#ffffffff" 
            android:id="@+id/extral" 
            android:background="#60000000" 
            android:padding="3dip" 
            android:visibility="gone" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_alignRight="@+id/image" 
            android:layout_alignBottom="@+id/image" />
	</RelativeLayout>
    <View android:background="#ff000000" android:layout_width="fill_parent" android:layout_height="0.666dip" />
</LinearLayout>
